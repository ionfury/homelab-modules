type: ${machine_type}
kubelet:
  nodeIP:
    validSubnets:
      - ${cluster_node_subnet}
  extraMounts:
%{ for mount in machine_kubelet_extraMounts ~}
    - destination: ${mount.destination}
      type: ${mount.type}
      source: ${mount.source}
      options:
%{ for option in mount.options ~}
        - ${option}
%{ endfor ~}
%{ endfor ~}
network:
  hostname: ${machine_hostname}
  interfaces:
%{ for interface in machine_interfaces ~}
    - deviceSelector:
        physical: true
      addresses:
%{ for address in interface.addresses ~}
        - ${address.ip}/${address.cidr}
%{ endfor ~}
      mtu: 1500
      dhcp: true
      dhcpOptions:
        routeMetric: ${interface.dhcp_routeMetric}
%{ if cluster_vip != "" ~}
%{ if machine_type == "controlplane" ~}
      vip:
        ip: ${cluster_vip}
%{ endif ~}
%{ endif ~}
      vlans:
%{ for vlan in interface.vlans ~}
        - vlanId: ${vlan.vlanId}
          addresses:
%{ for address in vlan.addresses ~}
            - ${address.ip}/${address.cidr}
%{ endfor ~}
          dhcp: true
          dhcpOptions:
            routeMetric: ${vlan.dhcp_routeMetric}
%{ endfor ~}
%{ endfor ~}
  nameservers:
%{ for nameserver in machine_nameservers ~}
    - ${nameserver}
%{ endfor ~}
time:
  servers:
%{ for timeserver in machine_timeservers ~}
    - ${timeserver}
%{ endfor ~}
disks:
%{ for disk in machine_disks ~}
  -%{ if try(disk.device, null) != null ~} device: ${disk.device}
%{ endif ~}
    partitions:
      - mountpoint: ${disk.mountpoint}
%{ endfor ~}
install:
  extraKernelArgs:
%{ for arg in machine_install.extra_kernel_args ~}
    - ${arg}
%{ endfor ~}
  wipe: ${machine_install.wipe}
features:
  hostDNS:
    enabled: true
    forwardKubeDNSToHost: true
    resolveMemberNames: true
nodeLabels:
%{ for item in machine_labels ~}
  ${item.key}: ${item.value}
%{ endfor ~}
nodeAnnotations:
%{ for item in machine_annotations ~}
  ${item.key}: ${item.value}
%{ endfor ~}
files:
%{ for file in machine_files ~}
  - content: |-
      ${indent(6,file.content)}
    permissions: ${file.permissions}
    path: ${file.path}
    op: ${file.op}
%{ endfor ~}
